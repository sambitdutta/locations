<!-- Modal content-->

<div class="modal-header">
    <h4 class="modal-title">Share Location</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<%= form_for @share_location_form, :remote =>  true do |f| %>
  <div class="modal-body">

      <div class="modal-form">


          <aside class="alert alert-info hide-aside share-info">

          </aside>


          <aside class="alert alert-danger hide-aside share-info">

          </aside>


          <div class="form-group">
              <label>Name:</label>
              <%= f.text_field :name, :class => "form-control" %>

          </div>

          <div class="form-group">
              <div id="share-map" class="map"></div>
              <%= f.hidden_field :latitude, :value => "0" %>
              <%= f.hidden_field :longitude, :value => "0" %>
          </div>

          <div class="form-group">
              <label>Share With:</label>
              <%= f.text_field :follower_ids, :class => 'form-control'%>
          </div>


      </div>

  </div>
  <div class="modal-footer">

      <%= f.submit :share, :value => "Share", :class => 'btn btn-primary'%>

        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  <% end %>


